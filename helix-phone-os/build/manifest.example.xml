<?xml version="1.0" encoding="UTF-8"?>
<manifest>
    <!-- Remotes -->
    <remote name="aosp" fetch="https://android.googlesource.com/" review="android-review.googlesource.com"/>
    <remote name="helix" fetch="https://github.com/Axionore/"/>

    <!-- Default -->
    <default revision="android-14.0.0_r62" remote="aosp" sync-j="8"/>

    <!-- Core AOSP -->
    <project path="platform/build" name="platform/build"/>
    <project path="platform/frameworks/base" name="platform/frameworks/base"/>
    <project path="platform/frameworks/native" name="platform/frameworks/native"/>
    <project path="platform/system/core" name="platform/system/core"/>
    <project path="platform/packages/apps/Settings" name="platform/packages/apps/Settings"/>
    <project path="platform/packages/apps/SystemUI" name="platform/packages/apps/SystemUI"/>

    <!-- Device targets (example: Pixel 7/8 family; adjust as validated) -->
    <project path="device/google/pantah" name="device/google/pantah"/> <!-- Pixel 7/7 Pro shared -->
    <project path="device/google/shiba" name="device/google/shiba"/>   <!-- Pixel 8 -->
    <project path="device/google/husky" name="device/google/husky"/>   <!-- Pixel 8 Pro -->
    <project path="kernel/google/gs" name="kernel/google/gs"/>         <!-- GS kernel -->
    <project path="vendor/google/pantah" name="vendor/google/pantah"/>
    <project path="vendor/google/shiba" name="vendor/google/shiba"/>
    <project path="vendor/google/husky" name="vendor/google/husky"/>

    <!-- Helix additions -->
    <project path="helix/services/policy-engine" name="helix-phone-os-services-policy-engine" remote="helix" revision="main"/>
    <project path="helix/services/domain-broker" name="helix-phone-os-services-domain-broker" remote="helix" revision="main"/>
    <project path="helix/services/network-privacy" name="helix-phone-os-services-network-privacy" remote="helix" revision="main"/>
    <project path="helix/services/bridge-agent" name="helix-phone-os-services-bridge-agent" remote="helix" revision="main"/>
    <project path="helix/apps/system" name="helix-phone-os-apps-system" remote="helix" revision="main"/>
    <project path="helix/docs" name="helix-phone-os-docs" remote="helix" revision="main"/>
</manifest>
